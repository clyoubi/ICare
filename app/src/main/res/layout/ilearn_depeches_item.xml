<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@android:color/white">

        <View
            android:id="@+id/stroke"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"/>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_banner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:scaleType="centerCrop"
        android:background="@color/grayBack"
        />



    <RelativeLayout
        android:id="@+id/infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_banner"
        android:layout_centerVertical="true">




        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, do eiusmod tempor incididunt ut labore"
            android:maxLines="3"
            android:textColor="@color/raven"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/postOn"
            android:maxLines="1"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:text="source"
            android:textColor="@color/raven"
            android:textSize="11sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/postOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
           android:layout_below="@+id/title"
            android:maxLines="1"
            android:text="Posted On"
            android:layout_marginTop="5dp"
            android:textColor="@color/raven"
            android:textSize="11sp"
            android:textStyle="italic" />

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>