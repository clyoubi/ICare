<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/grayBackground"
        android:scaleType="centerCrop"
        android:transitionName="imageTransition"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/jet"
        android:alpha="0.4"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="0dp"
        android:paddingBottom="5dp">



        <TextView
            android:id="@+id/title0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, do eiusmod tempor incididunt ut labore"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_above="@+id/source0"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:transitionName="titleTransition"/>


        <TextView
            android:id="@+id/source0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/postOn0"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="source"
            android:maxWidth="100dp"
            android:layout_marginLeft="10dp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_alignParentBottom="true"
            android:transitionName="detailTransition"/>

        <TextView
            android:id="@+id/postOn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:text="Posted On"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textStyle="italic"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:transitionName="detailTransition"
            />


    </RelativeLayout>

</RelativeLayout>